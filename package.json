{
  "name": "codehue",
  "displayName": "CodeHue",
  "description": "Structure coloring + inline translated comments (no rules mapping) for TS/JS/TSX/JSX.",
  "publisher": "codehue",
  "version": "2.0.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "images/icon.png",
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:javascript",
    "onLanguage:typescriptreact",
    "onLanguage:javascriptreact",
    "onStartupFinished",
    "onCommand:codehue.refresh"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codehue.refresh",
        "title": "CodeHue: Refresh Decorations"
      }
    ],
    "configuration": {
      "title": "CodeHue",
      "properties": {
        "codehue.regionColor": {
          "type": "string",
          "default": "rgba(76, 175, 80, 0.12)",
          "description": "Background color for // #region ... // #endregion ... blocks"
        },
        "codehue.regionBorder": {
          "type": "string",
          "default": "1px solid rgba(76,175,80,0.45)",
          "description": "CSS-like border for region blocks"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "standard-version": "^9.5.0",
    "tslib": "^2.6.2",
    "typescript": "^5.4.0"
  }
}
